@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Dashboard";
}

<div class="admin-header">
    <h1><i class="fa fa-tachometer-alt"></i> Dashboard</h1>
    <p>Hoş geldiniz, @Session["AdminName"]</p>
</div>

<style>
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }
    .stat-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 25px;
        border-radius: 12px;
        color: white;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s;
    }
    .stat-card:hover {
        transform: translateY(-5px);
    }
    .stat-card.primary { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .stat-card.success { background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); }
    .stat-card.warning { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
    .stat-card.info { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }
    .stat-card.danger { background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); }
    .stat-card.dark { background: linear-gradient(135deg, #434343 0%, #000000 100%); }
    
    .stat-card h3 {
        margin: 0 0 10px 0;
        font-size: 14px;
        opacity: 0.9;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    .stat-card .stat-value {
        font-size: 36px;
        font-weight: bold;
        margin: 10px 0;
    }
    .stat-card .stat-icon {
        font-size: 40px;
        float: right;
        opacity: 0.3;
        margin-top: -10px;
    }
    .quick-actions {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 12px;
        margin-top: 30px;
    }
    .quick-actions h2 {
        margin-top: 0;
        color: #333;
        font-size: 20px;
    }
    .action-buttons {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-top: 15px;
    }
    .action-btn {
        background: white;
        padding: 15px 20px;
        border-radius: 8px;
        text-decoration: none;
        color: #333;
        display: flex;
        align-items: center;
        gap: 10px;
        border: 2px solid #e9ecef;
        transition: all 0.3s;
    }
    .action-btn:hover {
        border-color: #d22;
        color: #d22;
        transform: translateX(5px);
    }
    .action-btn i {
        font-size: 20px;
    }
</style>

<div class="stats-grid">
    <div class="stat-card primary">
        <h3>Toplam Etkinlik</h3>
        <div class="stat-value">@ViewBag.TotalEvents</div>
        <i class="fa fa-calendar-alt stat-icon"></i>
    </div>
    
    <div class="stat-card success">
        <h3>Toplam Kullanıcı</h3>
        <div class="stat-value">@ViewBag.TotalUsers</div>
        <i class="fa fa-users stat-icon"></i>
    </div>
    
    <div class="stat-card info">
        <h3>Toplam Organizatör</h3>
        <div class="stat-value">@ViewBag.TotalOrganizers</div>
        <i class="fa fa-user-tie stat-icon"></i>
    </div>
    
    <div class="stat-card warning">
        <h3>Toplam Mekan</h3>
        <div class="stat-value">@ViewBag.TotalVenues</div>
        <i class="fa fa-map-marker-alt stat-icon"></i>
    </div>
    
    <div class="stat-card danger">
        <h3>Toplam Bilet</h3>
        <div class="stat-value">@ViewBag.TotalTickets</div>
        <i class="fa fa-ticket-alt stat-icon"></i>
    </div>
    
    <div class="stat-card dark">
        <h3>Toplam Sipariş</h3>
        <div class="stat-value">@ViewBag.TotalOrders</div>
        <i class="fa fa-shopping-cart stat-icon"></i>
    </div>
</div>

<div class="stats-grid">
    <div class="stat-card success">
        <h3>Toplam Gelir</h3>
        <div class="stat-value">@ViewBag.TotalRevenue.ToString("N2") ₺</div>
        <i class="fa fa-money-bill-wave stat-icon"></i>
    </div>
    
    <div class="stat-card warning">
        <h3>Bekleyen Siparişler</h3>
        <div class="stat-value">@ViewBag.PendingOrders</div>
        <i class="fa fa-clock stat-icon"></i>
    </div>
    
    <div class="stat-card danger">
        <h3>Bekleyen İadeler</h3>
        <div class="stat-value">@ViewBag.PendingRefunds</div>
        <i class="fa fa-undo stat-icon"></i>
    </div>
    
    <div class="stat-card info">
        <h3>Toplam İade Tutarı</h3>
        <div class="stat-value">@ViewBag.TotalRefundAmount.ToString("N2") ₺</div>
        <i class="fa fa-credit-card stat-icon"></i>
    </div>
</div>

<div class="stats-grid">
    <div class="stat-card primary">
        <h3>Bu Hafta Yeni Kullanıcılar</h3>
        <div class="stat-value">@ViewBag.NewUsersThisWeek</div>
        <i class="fa fa-user-plus stat-icon"></i>
    </div>
    
    <div class="stat-card success">
        <h3>Bu Hafta Yeni Etkinlikler</h3>
        <div class="stat-value">@ViewBag.NewEventsThisWeek</div>
        <i class="fa fa-calendar-plus stat-icon"></i>
    </div>
    
    <div class="stat-card info">
        <h3>Bu Hafta Yeni Siparişler</h3>
        <div class="stat-value">@ViewBag.NewOrdersThisWeek</div>
        <i class="fa fa-shopping-bag stat-icon"></i>
    </div>
    
    <div class="stat-card dark">
        <h3>Toplam İade</h3>
        <div class="stat-value">@ViewBag.TotalRefunds</div>
        <i class="fa fa-reply stat-icon"></i>
    </div>
</div>

<div class="quick-actions">
    <h2><i class="fa fa-bolt"></i> Hızlı İşlemler</h2>
    <div class="action-buttons">
        <a href="@Url.Action("Events", "Admin")" class="action-btn">
            <i class="fa fa-calendar-alt"></i>
            <span>Etkinlikleri Yönet</span>
        </a>
        <a href="@Url.Action("Users", "Admin")" class="action-btn">
            <i class="fa fa-users"></i>
            <span>Kullanıcıları Yönet</span>
        </a>
        <a href="@Url.Action("Organizers", "Admin")" class="action-btn">
            <i class="fa fa-user-tie"></i>
            <span>Organizatörleri Yönet</span>
        </a>
        <a href="@Url.Action("Tickets", "Admin")" class="action-btn">
            <i class="fa fa-ticket-alt"></i>
            <span>Biletleri Görüntüle</span>
        </a>
        <a href="@Url.Action("Refunds", "Admin")" class="action-btn">
            <i class="fa fa-undo"></i>
            <span>İadeleri Yönet</span>
        </a>
        <a href="@Url.Action("Venues", "Admin")" class="action-btn">
            <i class="fa fa-map-marker-alt"></i>
            <span>Mekanları Yönet</span>
        </a>
    </div>
</div>

